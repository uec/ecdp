<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    		 xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	
	
	<g:HTMLPanel>
	<gxt:ContentPanel ui:field="gridPanel" headingText="Download Grid">
					<container:VerticalLayoutContainer>
						<container:child >
							<gxt:toolbar.ToolBar ui:field="buttons">
								<gxt:button.TextButton ui:field="organizeType" text="Organize by Type" />
								<gxt:button.TextButton ui:field="organizeLocation" text="Organize by Location" />
								<gxt:button.TextButton ui:field="downloadSelected" text="Download Selected" /> 
							</gxt:toolbar.ToolBar>
						</container:child>
						<container:child >
							<gxt:container.VerticalLayoutContainer ui:field="content" />
						</container:child>
					</container:VerticalLayoutContainer>
				</gxt:ContentPanel>			
	</g:HTMLPanel>
</ui:UiBinder> 