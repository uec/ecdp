<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="edu.usc.epigenome.eccp.client.Resources.UserPanelResources"></ui:with>
	
	<g:FlowPanel ui:field='vp'>
		<g:HorizontalPanel ui:field='menu_items'>
			<g:MenuBar ui:field='mainbar'>
				<g:MenuItem ui:field='locationSort'>Organize By File Location</g:MenuItem>
				<g:MenuItem ui:field='laneSort'>Organize By File Lane</g:MenuItem>
				<g:MenuItem ui:field='typeSort'>Organize By File Type</g:MenuItem>
			</g:MenuBar>
			<g:HorizontalPanel ui:field='searchPanel' styleName='{res.userPanel.displayfilehorizontal}'>
				<g:TextBox ui:field='searchbox' value='search for'></g:TextBox>
				<g:Button ui:field='searchbutton' text='Search'></g:Button>
			</g:HorizontalPanel>
		</g:HorizontalPanel>
		<g:FlowPanel ui:field='filePanel'></g:FlowPanel>
		<g:FlowPanel ui:field='fileGroups' styleName='{res.userPanel.fileGroupsDisplay}'></g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 