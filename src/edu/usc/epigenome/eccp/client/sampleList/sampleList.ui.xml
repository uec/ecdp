<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client">
             
              <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="toolBarRowData">
   				 <ui:attributes width="1" height="30" />
  			  </ui:with>
  			  
  			   <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="contentData">
   				<!--  <ui:attributes width="1" height="1" /> -->
  			  </ui:with>
  	<container:VerticalLayoutContainer ui:field="vlc">
 	<container:child >
 	         <gxt:ContentPanel ui:field="gridPanel" headingText="USC Epigenome Center">       
 	         </gxt:ContentPanel>
	
 	</container:child>
 	
		
			<container:child  layoutData='{toolBarRowData}'>
				<gxt:toolbar.ToolBar ui:field="toolbar">
					<gxt:button.TextButton ui:field="byFlowcell" text="By Flowcell" />
					<gxt:button.TextButton ui:field="byLibrary" text="By Library" />
					<gxt:button.TextButton ui:field="byProject" text="By Project" />
					<gxt:button.TextButton ui:field="byDate" text="By Date" />
					<gxt:button.TextButton ui:field="byLibType" text="By LibType" />
					<gxt:button.TextButton ui:field="expand" text="Expand All" />
					<gxt:button.TextButton ui:field="collapse" text="Collapse All" />
					<gxt:button.TextButton ui:field="share" text="Share" />
					<gxt:button.TextButton ui:field="analyze" text="Analyze" />
				    <gxt:toolbar.SeparatorToolItem />	
				    <!--<gxt:form.CheckBox ui:field="hideMerged" boxLabel="Hide merged" value="true" visible="false" />--> 		
				</gxt:toolbar.ToolBar>
			</container:child>
			<container:child layoutData='{contentData}'>
				<gxt:container.VerticalLayoutContainer ui:field="content" />
			</container:child>
	</container:VerticalLayoutContainer>
</ui:UiBinder> 